<div class="jumbotron">
  <h1 class="display-3">Stock Market Today</h1>
  <p id="date_time" class="lead"></p>
  <p id="market" class="lead"></p>
  <hr class="my-4">
  <p class="lead">

    <div class="form-group">
      <%= form_tag(search_stock_path, method: "get") do %>
        <input type="text" name="query" class="form-control" placeholder="Enter symbol">
      <% end %>
    </div>

  </p>
</div>

<div class="row">
  <div class="col-12 col-md-4">
    <div class="card mb-3">
      <h3 class="card-header text-white">Most Active</h3>
      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Symbol</th>
              <th scope="col">Change</th>
              <th scope="col">Last Price</th>
            </tr>
          </thead>
          <tbody id="most_active">

          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-4">
    <div class="card mb-3">
      <h3 class="card-header text-white">Gainers</h3>
      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Symbol</th>
              <th scope="col">Change</th>
              <th scope="col">Last Price</th>
            </tr>
          </thead>
          <tbody id="most_gainers">

          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-4">
    <div class="card mb-3">
      <h3 class="card-header text-white">Losers</h3>
      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Symbol</th>
              <th scope="col">Change</th>
              <th scope="col">Last Price</th>
            </tr>
          </thead>
          <tbody id="most_losers">

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-12 col-md-12">
    <div class="card mb-3">
      <h3 class="card-header text-white">News</h3>
      <div class="card-body">
        <div id="ten_news">

        </div>
      </div>

    </div>
  </div>
</div>

